{% extends 'base_admin.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block main %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<td><img src="{{ asset('uploads/pictures/' ~ user.pictureFilename) }}" style="width:50px;"/></td>
			</tr>

			<tr>
				<th>Matricule</th>
				<td>{{ user.identifier }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Fonction</th>
				<td>{{ user.function }}</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ user.createAt ? user.createAt|date('d-m-Y') : ''  }}</td>
			</tr>
			<tr>
				<th>Dernière connection le</th>
				<td>{{ user.lastLogin ? user.lastLogin|date('d-m-Y H:i') : ''  }}</td>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<a href="{{ path('user_index') }}" class="btn btn-sm btn-secondary">Retour à la liste</a>

		<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Modifier</a>

		{{ include('admin/user/_delete_form.html.twig') }}
	</div>
{% endblock %}
